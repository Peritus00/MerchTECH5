{
  "version": 2,
  "name": "merchtech-server",
  "builds": [
    {
      "src": "services/Server/main.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "services/Server/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "services/Server/main.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "services/Server/main.js": {
      "maxDuration": 30
    }
  }
} 